generator client {
  provider = "prisma-client-js"
  output   = "../src/db/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String    @id @default(uuid())
  name      String
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        String   @id @default(uuid())
  text      String
  roomId    String
  senderName String
  room      Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
}
